<Window x:Class="BlendTalk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
		
		AllowsTransparency="True"
		Background="Transparent"
		WindowStyle="None"
		OpacityMask="White"
		MouseDown="Mouse_LeftButtonDown">
		<!-- This space above seperates the default code from what I added. -->

    <Grid>
        <!-- Add our background image...*Note* Path is explicit, not like normal HTML where you 
			 specify the path relevant to the file you are currently working on. -->
		<Image x:Name="SimonBG" Source="C:\Users\Thomas\Documents\GitHub\Simon\Simon\BlendTalk\Images\Simon_BG.png" />
		<Button Content="Button" HorizontalAlignment="Left" Height="162.833" Margin="96.667,8.167,0,0" VerticalAlignment="Top" Width="161.833"/>
		<Button Content="Button" HorizontalAlignment="Left" Height="163.699" Margin="265.858,7.538,0,0" VerticalAlignment="Top" Width="163.699" RenderTransformOrigin="0.5,0.5">
			<Button.RenderTransform>
				<TransformGroup>
